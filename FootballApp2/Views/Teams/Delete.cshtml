    ViewData["Title"] = "Видалення команди";
}

<h1>Видалити</h1>

<h3>Ви впевнені?</h3>
<div>
    <h4>Команда</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DivName)
