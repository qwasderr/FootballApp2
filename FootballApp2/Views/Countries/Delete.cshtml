@model FootballApp2.Models.Country

@{
    ViewData["Title"] = "Видалення країни";
}

<h1>Видалити</h1>

<h3>Ви впевнені?</h3>
<div>
    <h4>Країна</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
